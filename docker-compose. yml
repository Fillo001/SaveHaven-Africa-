version: "3.8"
services:
  backend:
    build: ./backend
    ports:
      - "5000:5000"
    environment:
      - FLASK_ENV=production
      - DATABASE_URL=sqlite:///safehaven.db
    volumes:
      - ./backend:/app

  frontend:
    image: httpd:2.4
    ports:
      - "8080:80"
    volumes:
      - ./frontend:/usr/local/apache2/htdocs/:ro
